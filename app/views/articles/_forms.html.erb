<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
  <%= render 'shared/errors'. obj: @article%>

  <%= form_with(model: @article, local: true)  do |f| %>
        <div class="form-group row">
          <strong><%= f.label :title, class: "col-2 col-form-label text-dark" %></strong>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <strong><%= f.label :description, class: "col-2 col-form-label text-dark" %></strong>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group mt-4 justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
      <form>
    </div>
    <div class="my-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
 </div>
</div>
