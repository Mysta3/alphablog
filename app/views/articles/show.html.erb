
<div class="container text-center">
<h1>Article Details</h1>
  <div class="card mt-4 mx-5 py-4">
  <div class="card-body">
    <div class="card header mx-3 font-italic"> 
      <%= @article.user.username if @article.user %>
      <%= link_to gravatar_for(@article.user), user_path(@article.user)%>
      <% if @article.categories.any? %>
        <%# loops through categories array and renders a partial for each %>
        <div class="my-3">
          <%= render @article.categories %> 
        </div> 
      <% end %>
    </div>
    <h5 class="card-title"><strong>Title: </strong><%= @article.title %></h5>
    <p class="card-text"><%= @article.description %></p>
     <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
      <%= link_to 'Edit', edit_article_path(@article),class: "btn btn-primary" %>
      <%= link_to 'Delete', article_path(@article), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" }%>
     <% end %>
    <%= link_to 'Return to articles listing', articles_path, class: "btn btn-warning"%>
  </div>
  </div>
</div>