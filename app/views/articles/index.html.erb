<h1>Articles listing Page</h1>

<%= link_to 'About Page', about_path%> | 
<%= link_to 'Home Page', root_path%> 

<table>
    <thead>
        <tr> 
          <th> Title </th>
          <th> Description </th> 
          <th colspan="3"> Actions </th> 
        </tr>
    </thead>

    <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title%></td>
          <td><%= article.description%></td>

          <td><%= link_to 'Show', article_path(article) %></td> 
          <td><%= link_to 'Edit', edit_article_path(article) %></td> 
          <%# link_to won't work due to line 10 within application.html.erb file being commented out. so I used button_to until I can find a fix. %>
          <td><%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td> 
        </tr>
    <% end %>
    </tbody>
</table>
<p><%= link_to'Create new Article', new_article_path %></p>