<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user%>

    <%= form_with(model: @user, local: true)  do |f| %>
        <div class="form-group row">
          <strong><%= f.label :username, class: "col-2 col-form-label text-dark" %></strong>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a Username" %>
          </div>
        </div>
        <div class="form-group row">
          <strong><%= f.label :email, class: "col-2 col-form-label text-dark" %></strong>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Email" %>
          </div>
        </div>
        <div class="form-group row">
          <strong><%= f.label :password, class: "col-2 col-form-label text-dark" %></strong>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Password" %>
          </div>
        </div>

        <div class="form-group mt-4 justify-content-center">
          <%= f.submit "Sign Up", class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
      <form>
    </div>
    <div class="my-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
 </div>
</div>
